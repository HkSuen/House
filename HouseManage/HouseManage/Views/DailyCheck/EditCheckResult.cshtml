            ele.value = 0;
        };
    }
    function submit() {
        var ele = document.getElementsByName("radio1");
        let radiovalue = "";
        for (var i = 0; i < ele.length; i++) {
            if (ele[i].checked) {
                radiovalue = ele[i].value;
            };
        };
        temp.JCJG = radiovalue;
