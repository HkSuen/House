                let item = {
                    CHECK_DETAIL_ID: CHECKINFO[i].CHECK_RESULT_ID,
                    VALUE: checkele.value,
                };
                qualified = qualified&&(item.VALUE == 1)
                temp.CHECK_DETAIL_RESULT.push(item);
            }
        }
