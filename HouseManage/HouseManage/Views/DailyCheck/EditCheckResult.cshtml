        if (RESULT_ID.trim() == "") {
            console.log(Code);
            temp.INSERTINFO[Code] = 0;
            document.getElementById(Code).className = "mui-btn mui-btn-danger";
        }
        else {
            var ele = document.getElementById(RESULT_ID);
