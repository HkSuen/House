    ViewData["Title"] = "新建检查";
    Layout = "~/Views/Shared/_Layout.cshtml";
    @model List<Data.MSSQL.Model.Data.wy_task_detail_config>
}
<script src="~/wxstatic/js/wx.confg.js"></script>
<style type="text/css">
