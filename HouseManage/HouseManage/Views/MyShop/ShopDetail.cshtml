
@{
    ViewData["Title"] = "Payment";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Hello MUI</title>
    <meta name="viewport" content="width=device-width, initial-scale=1,maximum-scale=1,user-scalable=no">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <link rel="stylesheet" href="~/css/mui.min.css">
    <link rel="stylesheet" href="~/css/mui.picker.css">
    <link rel="stylesheet" href="~/css/mui.poppicker.css">
    <script src="~/lib/jquery/dist/jquery.min.js" type="text/javascript"></script>
    <style>
        /*隐藏google touch事件错误*/
        * {
            touch-action: none;
        }
        /*删除下划线*/
        a {
            text-decoration: none
        }
        .mui-placeholder {
            font-size: 14px;
        }
    </style>
</head>

<body class="mui-ios mui-ios-13 mui-ios-13-2 mui-ios-13-2-3">
    <div class="mui-content">
        <div class="mui-card">
            <ul class="mui-table-view" id="conditions">
                <li class="mui-table-view-cell mui-collapse">
                    <a class="mui-navigate-right" href="#">筛选条件</a>
                    <div class="mui-collapse-content">
                        <form class="mui-input-group">
                            <div class="mui-input-row">
                                <label>缴费类型:</label>
                                <input type="text" placeholder="请选择" id="inputType">
                            </div>
                        </form>
                    </div>
                </li>
            </ul>
        </div>
        <div class="mui-card">
            <div style="padding: 10px 10px;">
                <div id="segmentedControl" class="mui-segmented-control mui-segmented-control-inverted mui-segmented-control-primary">
                    <a class="mui-control-item mui-active" href="#item1">商铺信息</a>
                    <a class="mui-control-item" href="#item3">商户信息</a>
                </div>
            </div>
            <div>
                <div id="item1" class="mui-control-content mui-active">
                    <div class="mui-input-row">
                        <label>房屋属性</label>
                        <input type="text" class="mui-input-clear">
                    </div>
                    <div class="mui-input-row">
                        <label>商铺名称</label>
                        <input type="text" class="mui-input-clear">
                    </div>
                    <div class="mui-input-row">
                        <label>商铺编号</label>
                        <input type="text" class="mui-input-clear">
                    </div>
                    <div class="mui-input-row">
                        <label> 区 域 </label>
                        <input type="text" class="mui-input-clear">
                    </div>
                    <div class="mui-input-row">
                        <label>建筑面积</label>
                        <input type="text" class="mui-input-clear">
                    </div>
                    <div class="mui-input-row">
                        <label>隶属公司</label>
                        <input type="text" class="mui-input-clear">
                    </div>
                    <div class="mui-input-row">
                        <label>坐落位置</label>
                        <input type="text" class="mui-input-clear">
                    </div>
                    <div class="mui-input-row">
                        <label>结构类型</label>
                        <input type="text" class="mui-input-clear">
                    </div>
                    <div class="mui-input-row">
                        <label>资产值</label>
                        <input type="text" class="mui-input-clear">
                    </div>
                </div>
                <div id="item3" class="mui-control-content">
                    <div class="mui-input-row">
                        <label>商户名称</label>
                        <input type="text" class="mui-input-clear">
                    </div>
                    <div class="mui-input-row">
                        <label>店铺位置</label>
                        <input type="text" class="mui-input-clear">
                    </div>
                    <div class="mui-input-row">
                        <label>房屋类型</label>
                        <input type="text" class="mui-input-clear">
                    </div>
                    <div class="mui-input-row">
                        <label>经营内容</label>
                        <textarea id="textarea" rows="6"></textarea>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="../js/mui.min.js"></script>
    <script src="../js/mui.picker.js"></script>
    <script src="../js/mui.poppicker.js"></script>
    <script>
        jq = $;
        //mui
        var picker = null;
        (function ($) {
            $.init({
                swipeBack: true //启用右滑关闭功能
            });
            $('#scroll').scroll({
                indicators: true //是否显示滚动条，
            });
            // picker
            picker = new mui.PopPicker();
            jq("#inputType").on("tap", function () {
                picker.show(function (selectItems) {
                    //赋值筛选条件
                    jq(this).val(selectItems[0].text);
                }.bind(this))
            })
            $.post("demo_ajax_gethint.html", { suggest: null }, function (result) {
                var list = null;
                picker.setData(list);
            });
        })(mui);
    </script>

</body>

</html>